<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <declare-styleable name="WaterDropIndicator">
        <attr name="indicator_selected_color" format="color"/>
        <attr name="indicator_unselected_color" format="color"/>
        <attr name="indicator_size" format="dimension"/>
        <attr name="indicator_space" format="dimension"/>
    </declare-styleable>
</resources>
