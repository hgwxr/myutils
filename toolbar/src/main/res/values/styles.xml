<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
        <!--toolbar theme-->
    <style name="ToolBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
          <!--菜单字体颜色-->
        <item name="actionMenuTextColor">@android:color/black</item>
        <!--<item name="actionMenuTextAppearance">@style/ToolbarMenuTextSize</item>-->
          <!--字体颜色-->
           <item name="android:textColorPrimary">#0f0</item>
          <!--溢出菜单颜色-->
           <item name="android:textColorSecondary">#0f0</item>
           <item name="android:selectableItemBackground">@drawable/toolbar_button_bg</item>
    </style>
     <!--设置字体大小-->
    <style name="Toolbar.titletext" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
      <item name="android:textSize">12sp</item>
    </style>

    <!--pop 弹出样式-->
    <style name="ToolBarPopupTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:colorBackground">#fff</item>
        <item name="actionOverflowMenuStyle">@style/ToolBarOverflowMenuStyle</item>
         <item name="android:actionBarItemBackground">@drawable/toolbar_button_bg</item>
    </style>
    <!--溢出菜单样式 -->
    <style name="ToolBarOverflowMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownHorizontalOffset">-4dp</item>
        <item name="android:dropDownVerticalOffset">4dip</item>
        <item name="android:paddingRight">-50dp</item>
        <!--<item name="android:dropDownWidth">wrap_content</item>-->

        <!--<item name="android:paddingRight">5dp</item>-->
        <!--<item name="android:popupBackground">?attr/colorPrimary</item>-->
        <!--<item name="android:dropDownVerticalOffset">0dip</item>-->
        <!--<item name="android:dropDownHorizontalOffset">0dip</item>-->
    </style>
</resources>
